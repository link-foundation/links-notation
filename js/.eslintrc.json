{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }]
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "src/parser-generated.js"
  ]
}
